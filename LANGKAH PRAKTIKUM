<body>
    <!-- JENDELA DIALOG BUTTON -->
    <!-- <button onClick="alert('Tombol diklik!')">Klik Saya</button> -->

    <!-- OPERATOR RELASI DAN PERBANDINGAN (>, <, ==(TIDAK MEMENTINGKAN TIPE DATA), ===(MEMENTINGKAN TIPE DATA), !=, !==, >=, <=) -->
    <script>
        var aku = 20;
        var kamu = 19;

        // sama dengan
        var hasil = aku == kamu;
        document.write(`${aku} == ${kamu} = ${hasil}<br/>`);
        // lebih besar
        var hasil = aku > kamu;
        document.write(`${aku} > ${kamu} = ${hasil}<br/>`);
        // lebih besar sama dengan
        var hasil = aku >= kamu;
        document.write(`${aku} >= ${kamu} = ${hasil}<br/>`);
        // lebih kecil
        var hasil = aku < kamu;
        document.write(`${aku} < ${kamu} = ${hasil}<br/>`);
        // lebih kecil sama dengan
        var hasil = aku <= kamu;
        document.write(`${aku} <= ${kamu} = ${hasil}<br/>`);
        // tidak samadengan
        var hasil = aku != kamu;
        document.write(`${aku} != ${kamu} = ${hasil}<br/>`);

    // OPERATOR LOGIKA (&&, ||, !)
        var aku = 20;
        var kamu = 19;

        var benar = aku > kamu;
        var salah = aku < kamu;
        // and &&
        var hasil = benar && salah;
        document.write(`${benar} && ${salah} = ${hasil}<br/>`);
        // or ||
        var hasil = benar || salah;
        document.write(`${benar} || ${salah} = ${hasil}<br/>`);
        // not !
        var hasil = ! benar;
        document.write(`!${benar} = ${hasil}<br/>`);
        
    // OPERATOR BITWISE (&, |, ^, ~, <<, >>, >>>)
        var x = 4;
        var y = 3;

        // and &
        var hasil = x & y;
        document.write(`${x} & ${y} = ${hasil}<br/>`);
        // or |
        var hasil = x | y;
        document.write(`${x} | ${y} = ${hasil}<br/>`);
        // xor ^
        var hasil = x ^ y;
        document.write(`${x} ^ ${y} = ${hasil}<br/>`);
        // negasi ~
        var hasil = ~x;
        document.write(`~${x}= ${hasil}<br/>`);
        // right shift >>
        var hasil = x >> y;
        document.write(`${x} >> ${y} = ${hasil}<br/>`);
        // left shift
        var hasil = x << y;
        document.write(`${x} << ${y} = ${hasil}<br/>`);
        // right shift (unsigned)
        var hasil = x >>> y;
        document.write(`${x} >>> ${y} = ${hasil}<br/>`);
    // OPERATOR TERNARY
        var pertanyaan = confirm("Apakah kamu berumur diatas 18 tahun?");

        var hasil = pertanyaan? "Selamat datang" : "Kamu tidak boleh di sini";
        document.write(hasil);
    </script>
</body>
